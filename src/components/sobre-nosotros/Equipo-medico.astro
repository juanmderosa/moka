---
import { Image } from "astro:assets";
import gabriel from "../../assets/images/images.jpg";
import gonzalo from "../../assets/images/medium-shot-doctor-wearing-coat.jpg";
import sofia from "../../assets/images/female-doctor-hospital-with-stethoscope.jpg";
import daniela from "../../assets/images/front-view-female-researcher-lab-coat.jpg";

const doctors = [
  {
    img: gabriel,
    name: "Gabriel",
    lastname: "Mouriño",
    color: "#3974ba",
  },
  {
    img: gonzalo,
    name: "Gonzalo",
    lastname: "Oviedo",
    color: "#5fa7dc",
  },
  {
    img: sofia,
    name: "Sofía",
    lastname: "Kysilka",
    color: "#8ac1ea",
  },
  {
    img: daniela,
    name: "Daniela",
    lastname: "Anastasio",
    color: "#a2c7ea",
  },
];
---

<section class="main-container">
  <h2>Equipo Médico</h2>
  <article class="doctors-container">
    {
      doctors.map((doctor) => (
        <>
          <div class="doctor-container">
            <div class="image-container">
              <Image
                src={doctor.img}
                class="doctor-img"
                alt={`${doctor.name} ${doctor.lastname}`}
              />
            </div>
            <p class="doctor-name">
              {doctor.name}
              <span class="doctor-lastname">{doctor.lastname}</span>
            </p>
            <div
              class="circle"
              style={`background-color: ${doctor.color}`}
            />
          </div>
        </>
      ))
    }
  </article>
</section>

<style>
  /* MAIN */
  .main-container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    height: 100vh;
    width: 100%;
    position: relative;
    z-index: 1;
  }

  .main-container::before {
    content: "";
    background-color: var(--Darkerblue);
    position: absolute;
    top: 0;
    left: 0;
    clip-path: polygon(0 0, 100% 19%, 100% 0);
    width: 100%;
    height: 100%;
    z-index: -1;
  }
  h2 {
    margin-bottom: 5rem;
    font-size: 2.5rem;
    font-family: "Raleway";
    color: var(--Darkerblue);
  }

  .doctors-container {
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
    gap: 2rem;
    width: 100%;
  }
  .doctor-container {
    width: 25%;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    align-items: center;
  }
  .image-container {
    width: 100px;
    height: 100px;
    border-radius: 100%;
  }
  .doctor-img {
    object-fit: cover;
    width: 100%;
    height: 100%;
    border-radius: 100%;
  }

  .circle {
    width: 15px;
    height: 15px;
    border-radius: 50%;
  }

  .doctor-name {
    font-family: "ModernSans";
    color: var(--Darkblue);
  }
  .doctor-lastname {
    text-transform: uppercase;
    font-family: "MyriadPro";
    color: var(--Darkerblue);
  }
</style>

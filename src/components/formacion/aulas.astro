---
import Formacion from "../../assets/images/formacion.png";
import { Image } from "astro:assets";
---

<section class="main-coverer">
  <div class="title-coverer">
    <h2>Aulas</h2>
  </div>
  <Image
    class="aula-foto-1"
    src={Formacion}
    alt="Formacion"
  />
  <Image
    class="aula-foto-2"
    src={Formacion}
    alt="Formacion"
  />
  <Image
    class="aula-foto-3"
    src={Formacion}
    alt="Formacion"
  />
  <Image
    class="aula-foto-4"
    src={Formacion}
    alt="Formacion"
  />
